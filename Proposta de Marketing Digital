    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const slider = document.getElementById('clinicas');
            const clinicCount = document.getElementById('clinicCount');
            const totalMes1 = document.getElementById('totalMes1');
            const totalMesesSeguintes = document.getElementById('totalMesesSeguintes');
            const ctx = document.getElementById('investmentChart').getContext('2d');

            const formatCurrency = (value) => {
                return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
            };

            const data = {
                labels: ['M√™s 1 (Setup)', 'Gest√£o Cont√≠nua'],
                datasets: [{
                    label: 'Investimento Total',
                    data: [700, 600],
                    backgroundColor: [
                        'rgba(0, 119, 182, 0.6)',
                        'rgba(0, 180, 216, 0.6)'
                    ],
                    borderColor: [
                        'rgba(0, 119, 182, 1)',
                        'rgba(0, 180, 216, 1)'
                    ],
                    borderWidth: 1
                }]
            };

            const config = {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value, index, values) {
                                    return formatCurrency(value);
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += formatCurrency(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            };

            const investmentChart = new Chart(ctx, config);

            function updateValues(count) {
                const mes1Value = count * 700;
                const mesesSeguintesValue = count * 600;

                clinicCount.textContent = count;
                totalMes1.textContent = formatCurrency(mes1Value);
                totalMesesSeguintes.textContent = formatCurrency(mesesSeguintesValue) + '/m√™s';
                
                investmentChart.data.datasets[0].data = [mes1Value, mesesSeguintesValue];
                investmentChart.update();
            }

            slider.addEventListener('input', (event) => {
                updateValues(event.target.value);
            });
            
            updateValues(slider.value); 
        });
    </script>
